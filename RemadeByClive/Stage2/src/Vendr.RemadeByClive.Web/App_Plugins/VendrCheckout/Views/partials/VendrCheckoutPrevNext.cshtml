@inherits UmbracoViewPage
@{ 
    var backPage = Model.GetCheckoutBackPage();
    var prevStep = Model.GetPreviousStepPage();
    var nextStep = Model.GetNextStepPage();

    var themeColor = Model.GetThemeColor();
}
<div class="flex flex-col-reverse items-center justify-between mt-8 md:flex-row">
    @if (prevStep != null)
    {
        <div><a href="@(prevStep.Url())" class="inline-flex text-@(themeColor) hover:text-gray-900 hover:underline"><svg viewBox="0 0 20 20" class="inline-block w-5 h-5 fill-current"><use href="#ico-chevron-left" /></svg> @string.Format(Umbraco.GetDictionaryValue("VendrCheckout.Navigation.ReturnTo", "Return to {0}"), prevStep.Name)</a></div>
    }
    else if (backPage != null)
    {
        <div><a href="@(backPage.Url())" class="inline-flex text-@(themeColor) hover:text-gray-900 hover:underline"><svg viewBox="0 0 20 20" class="inline-block w-5 h-5 fill-current"><use href="#ico-chevron-left" /></svg> @string.Format(Umbraco.GetDictionaryValue("VendrCheckout.Navigation.ReturnTo", "Return to {0}"), backPage.Name)</a></div>
    }
    else
    {
        <div></div>
    }
    @if (nextStep != null)
    {
        <div class="mb-4 w-full md:mb-0 md:w-auto">
            <button id="continue" class="bg-@(themeColor) text-white px-4 py-4 w-full rounded hover:bg-gray-900 disabled:cursor-not-allowed disabled:bg-gray-100 disabled:text-gray-300 disabled:hover:bg-gray-100 disabled:hover:text-gray-300" type="submit">@string.Format(Umbraco.GetDictionaryValue("VendrCheckout.Navigation.ContinueTo", "Continue to {0}"), nextStep.Name)</button>
        </div>
    }
</div>